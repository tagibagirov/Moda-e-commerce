@model User


<section style="padding-top: 80px;">
    <div class="login-register container m-auto py-5 my-5">
        <!-- <h2 class="d-none">Login &amp; Register</h2> -->
        <ul class="nav mb-5 justify-content-center" id="login_register">
            <li class="nav-item" role="presentation">
                <a class="nav-link nav-link_underscore text-uppercase fs-6 fw-500 active" id="login-tab" data-bs-toggle="tab"
                   href="#tab-item-login" role="tab" aria-controls="tab-item-login" aria-selected="true">Login</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link nav-link_underscore  text-uppercase fs-6 fw-500" id="register-tab" data-bs-toggle="tab"
                   href="#tab-item-register" role="tab" aria-controls="tab-item-register"
                   aria-selected="false">Register</a>
            </li>
        </ul>
        <div class="tab-content pt-2" id="login_register_tab_content">
            <div class="tab-pane fade show active" id="tab-item-login" role="tabpanel" aria-labelledby="login-tab">
                <div class="login-form">
                    <form asp-controller="User" asp-action="Login" method="post" name="login-form" class="needs-validation">
                        <div class="form-floating mb-3">
                            <input asp-for="UserNickname" class="form-control form-control_gray"
                                   id="customerNameEmailInput1" placeholder="Nickname *" required="">
                            <label for="customerNameEmailInput1">Nickname *</label>
                        </div>

                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserPassword" class="form-control form-control_gray"
                                   id="customerPasswodInput" placeholder="Password *" required="">
                            <label for="customerPasswodInput">Password *</label>
                        </div>

                        <div class="d-flex align-items-center mb-3 pb-2">
                            <div class="form-check mb-0">
                                <input name="remember" class="form-check-input form-check-input_fill text-danger"
                                       type="checkbox" value="" id="flexCheckDefault1">
                                <label class="form-check-label text-secondary" for="flexCheckDefault1">
                                    Remember
                                    me
                                </label>
                            </div>
                            <a href="./reset_password.html" class="btn-text ms-auto">Lost password?</a>
                        </div>

                        <button class="fw-500 text-white rounded-0 w-100 text-uppercase" type="submit">Log In</button>

                        <div class="customer-option mt-4 text-center">
                            <span class="text-secondary">No account yet?</span>
                            <a href="#register-tab" class="btn-text js-show-register">Create Account</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="tab-pane fade" id="tab-item-register" role="tabpanel" aria-labelledby="register-tab">
                <div class="register-form">
                    <form asp-controller="user" asp-action="Register" method="post" name="register-form" class="needs-validation">
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control form-control_gray"
                                   id="customerNameRegisterInput" placeholder="Name *" required="">
                            <label for="customerNameRegisterInput">Name *</label>
                        </div>

                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserSurname" class="form-control form-control_gray"
                                   id="customerEmailRegisterInput" placeholder="Surname *" required="">
                            <label for="customerEmailRegisterInput">Surname *</label>
                        </div>
                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserNickname" class="form-control form-control_gray"
                                   id="customerEmailRegisterInput" placeholder="Nickname *" required="">
                            <label for="customerEmailRegisterInput">Nickname *</label>
                        </div>

                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserPassword" class="form-control form-control_gray"
                                   id="customerPasswodRegisterInput" placeholder="Password *" required="">
                            <label for="customerPasswodRegisterInput">Password *</label>
                        </div>

                        <div class="d-flex align-items-center mb-3 pb-2">
                            <p class="m-0">
                                Your personal data will be used to support your experience throughout
                                this website, to manage access to your account, and for other purposes described in
                                our privacy policy.
                            </p>
                        </div>

                        <button class="fw-500 text-white rounded-0 w-100 text-uppercase" type="submit">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>