@model User


<section style="padding-top: 80px;">
    <div class="login-register container m-auto py-5 my-5">
        <!-- <h2 class="d-none">Login &amp; Register</h2> -->
        <div class="nav mb-4 justify-content-center" id="login_register">
            <h3 class="nav-item">
                <a class="nav-link nav-link_underscore text-uppercase fs-6 fw-500 active" id="register-tab" href="#tab-item-register">Please register to continue!</a>
            </h3>
            @if (ViewBag.ErrorMessage != null)
            {
                <span class="text-danger position-relative fs-6 text-center">@ViewBag.ErrorMessage</span>
            }
        </div>
        <div class="tab-content pt-2" id="login_register_tab_content">
            <div class="tab-pane fade show active" id="tab-item-register">
                <div class="register-form">
                    <form asp-controller="user" asp-action="Register" method="post" name="register-form" class="needs-validation">
                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control form-control_gray" placeholder="Name *">
                            <label for="UserName">Name *</label>
                            <span asp-validation-for="UserName" class="text-danger position-relative"></span>
                        </div>

                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserSurname" class="form-control form-control_gray" placeholder="Surname *">
                            <label for="UserSurname">Surname *</label>
                            <span asp-validation-for="UserSurname" class="text-danger position-relative"></span>
                        </div>
                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserNickname" class="form-control form-control_gray" placeholder="Nickname *">
                            <label for="UserNickname">Nickname *</label>
                            <span asp-validation-for="UserNickname" class="text-danger position-relative"></span>
                        </div>

                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserPhone" class="form-control form-control_gray" placeholder="Password *">
                            <label for="UserPhone">Phone *</label>
                            <span asp-validation-for="UserPhone" class="text-danger position-relative"></span>
                        </div>
                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserEmail" class="form-control form-control_gray" placeholder="Password *">
                            <label for="UserEmail">Email *</label>
                            <span asp-validation-for="UserEmail" class="text-danger position-relative"></span>
                        </div>
                        <div class="pb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserPassword" class="form-control form-control_gray" placeholder="Password *">
                            <label for="UserPassword">Password *</label>
                            <span asp-validation-for="UserPassword" class="text-danger position-relative"></span>
                        </div>
                        <div class="pb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="UserPassword" class="form-control form-control_gray" placeholder="Password *">
                            <label for="UserPassword">Password *</label>
                            <span asp-validation-for="UserPassword" class="text-danger position-relative"></span>
                        </div>

                        <div class="d-flex align-items-center mb-3 pb-2">
                            <p class="m-0">
                                Your personal data will be used to support your experience throughout
                                this website, to manage access to your account, and for other purposes described in
                                our privacy policy.
                            </p>
                        </div>

                        <button class="fw-500 text-white rounded-0 w-100 text-uppercase" type="submit">Register</button>
                        <div class="customer-option mt-4 text-center">
                            <span class="text-secondary">Already have an account?</span>
                            <a href="/user/login" class="btn-text js-show-register">Log in</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>